{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@modules/*": ["src/modules/*"],
      "@routes/*": ["src/routes/*"],
      "@shared/*": ["src/shared/*"]
    },
    "resolveJsonModule": true,

    // "rootDirs": [],
    "typeRoots": ["@types", "./node_modules/@types"],

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "outDir": "build",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,

    /* Completeness */
    "skipLibCheck": true
  }
}
